{
  "name": "rnsandbox",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "android:clean": "cd android && ./gradlew clean",
    "detox:buildAndroidDebug": "detox build -c android.emu.debug",
    "detox:buildAndroidRelease": "detox build -c android.emu.release",
    "detox:buildIosDebug": "detox build -c ios.sim.debug",
    "detox:buildIosRelease": "detox build -c ios.sim.release",
    "detox:testAndroidDebug": "detox test -c android.emu.debug",
    "detox:testAndroidRelease": "detox test -c android.emu.release",
    "detox:testIosDebug": "detox test -c ios.sim.debug",
    "detox:testIosRelease": "detox test -c ios.sim.release"
  },
  "dependencies": {
    "react": "16.13.1",
    "react-native": "0.63.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/runtime": "^7.8.4",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native-community/eslint-config": "^1.1.0",
    "@types/detox": "^16.4.2",
    "@types/jest": "^26.6.3",
    "@types/react-native": "^0.63.2",
    "@types/react-test-renderer": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-jest": "^26.6.3",
    "detox": "^17.13.0",
    "eslint": "^6.5.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "lint-staged": ">=10",
    "metro-react-native-babel-preset": "^0.59.0",
    "react-test-renderer": "16.13.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
  }
}
